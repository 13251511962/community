#!/bin/sh -e

sed -i "s/CFLAGS :=/CFLAGS := \$(CFLAGS)/;/LDFLAGS :=/d" Make.Rules
sed -i 's/pthread\.h>/\0 #include <sched.h>/'            libcap/psx.c
sed -i 's/pthread_yield/sched_yield/'                    libcap/psx.c

make
make \
    GOLANG=no \
    PREFIX=/usr \
    SBINDIR=/usr/bin \
    LIBDIR=/usr/lib \
    DESTDIR="$1" \
    RAISE_SETFCAP=no \
    install
